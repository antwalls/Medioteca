<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")

</head>
<body>
    <div class="navbar navbar-inverse blue-stuff navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medioteca-OFI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><i class="fa fa-home icon-left"></i>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li><i class="fa fa-search icon-left""></i>@Html.ActionLink("Busqueda", "Index", "Search")</li>
                    <li><i class="fa fa-info-circle icon-left""></i>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li><i class="fa fa-envelope icon-left""></i>@Html.ActionLink("Roles", "Index", "Role")</li>
                    <li><i class="fa fa-user icon-left""></i>@Html.ActionLink("Users", "List", "Account")</li>
                    <li><i class="fa fa-mail-forward icon-left""></i>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container body-content little_spacing shadow">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Antonio Paredes Picon para www.Ofimatica.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
